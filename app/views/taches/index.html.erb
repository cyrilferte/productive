
  <div class="container">
    <div class="row">
      <div class=" col-sm-2 "></div>
      <div class=" col-sm-8 ">
        <h1 class="text-center"> All taches </h1>
        <% @taches.each do |tache| %>
            <div class="tache <%= tache.etat %>">
              <div class="cercle-container" >
                <div class="circle <%= tache.theme %>">
                  <p><%= tache.timedo %></p>
                </div>
              </div>
                <div class='tache-body'>
                    <h3 class="ttext"> <%= tache.name %> </h3>
                    <p class="ttext"> <%= tache.theme %> </p>
                </div>
                <ul class="list-inline product-controls">
                    <li>
                    <%= link_to tach_path(tache) do %>
                    <i class="fa fa-eye"></i>
                    <% end %>
                    </li>
                    <li>
                    <%= link_to edit_tach_path(tache) do %>
                    <i class="fa fa-pencil"></i>
                    <% end %>
                    </li>
                    <li>
                    <%= link_to tach_path(tache), method: :delete do %>
                    <i class="fa fa-trash"></i>
                    <% end %>
                    </li>

                </ul>
            </div><br>
        <% end %>
        <div class="text-center"><%= link_to "ADD", new_tach_path, class:"btn btn-info" %></div>
      </div>
    </div>
  </div>
  
